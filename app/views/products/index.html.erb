<p id="notice"><%= notice %></p>

<h1>Products</h1>

<%= form_tag "/products", method: :get do %>
  <%= text_field_tag :keyword, params[:keyword], placeholder: "Keyword" %>
  <%= select_tag :status, options_for_select(Product.statuses.to_a, params[:status]), include_blank: "Status" %>
  <%= text_field_tag :location, params[:location], placeholder:  "Location" %>
  <%= submit_tag "Search" %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Status</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.status %></td>
        <td><%= product.location %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path %>
